{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
        "emitDeclarationOnly": true,
        "declaration": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "dist",
		"rootDir": "src",
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "types": [
           "jest"
        ]
	},
	"include": ["src"],
    "exclude": ["**/node_modules", "node_modules", ".vscode-test", "test"]
	
}
